{
  "extends": ["../../.eslintrc.json", "airbnb-base", "airbnb-typescript/base"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
	"project": ["packages/api/tsconfig.*?.json"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"@typescript-eslint/indent": ["error", "tab"],
		"import/prefer-default-export": 0,
		"no-underscore-dangle": 0
	  }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
